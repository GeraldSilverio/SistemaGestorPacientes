@using GestorDePacientes.Core.Application.ViewModels.UserViewModels;


@model List<UserViewModel>

@{
    ViewData["Title"] = "User Home";
}
<div class="container-fluid">

    <div class="row">
        <div class="col-12 text-end mt-2 mb-2">
            <a class="btn btn-outline-primary" asp-controller="User" asp-action="Create">Create User</a>
            <a class="btn btn-outline-primary ms-2" asp-controller="User" asp-action="Create">Create Rol</a>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-header text-light bg-success">
                    <h3 class="text-center">LISTA DE USUARIOS CREADOS</h3>
                </div>
                <div class="card-body">
                    <div >
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Apellido</th>
                                    <th scope="col">Correo</th>
                                    <th scope="col">Nombre Usuario</th>
                                    <th scope="col">Tipo Usuario</th>
                                    <th scope="col">Acciones</th>

                                </tr>
                            </thead>
                        </table>
                    </div>

                </div>

            </div>
        </div>



    </div>

</div>

